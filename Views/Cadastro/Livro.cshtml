@{
    ViewData["Title"] = "Cadastro";

}

@model Livro
<!-- Cabeçalho com título e subtítulo (ambos com css de id "titulo") -->
<div>
    <h1 id="titulo">Cadastro de Livros</h1>
    <br>
</div>

<!-- Início do formulário -->
<form asp-controller="Cadastro" asp-action="cadastrolivro">
    <table>
        <tr>
            <td>
                Código:
                <div class="campo">
                    <input type="text" name="id" id="id" asp-for="@Model.Id" readonly>
                </div>
            </td>
            <td>
                <label>Nome</label>
                <div class="campo">
                    <input type="text" name="nome" id="nome" asp-for="@Model.Nome">
                </div>

            </td>
        </tr>

        <tr></tr>
        <tr>
            <td>
                <button class="botao" type="submit" onsubmit="">Salvar</button>
            </td>
        </tr>
    </table>
</form>